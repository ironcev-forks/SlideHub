<section class="content-header">
<h1><%= t('activerecord.models.category') %><small></small></h1>
<ol class="breadcrumb">
  <li><a href="<%= admin_dashboard_path %>"><i class="fa fa-dashboard"></i> <%= t(:admin_dashboard) %></a></li>
  <li class="active"><%= link_to t('activerecord.models.category'), admin_categories_path %></li>
</ol>
</section>

<!-- Main content -->
<section class="content">
<!-- Your Page Content Here -->
<%= render :partial => 'shared/flash', :locals => { :flash => flash } %>

<div class="box box-warning">
  <div class="box-header">
    <h3 class="box-title">&nbsp;</h3>
    <div class="box-tools">
      <div class="input-group input-group-sm text-right">
        <div class="input-group-btn">
          <%= link_to t(:new_category), new_admin_category_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
  <div class="box-body">
  <!-- Table -->
  <table class="table table-striped table-bordered small">
    <thead>
      <tr>
        <th class="col-md-1"><%= t(:id) %></th>
        <th class="col-md-4"><%= t(:category_name_en) %></th>
        <th class="col-md-4"><%= t(:category_name_ja) %></th>
        <th class="col-md-2"><%= t(:number_of_slides) %></th>
        <th class="col-md-2"><%= t('command') %></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name_en %></td>
          <td><%= category.name_ja %></td>
          <td><%= category.slides.count %></td>
          <td>
            <%= button_to t(:edit), edit_admin_category_path(category.id), method: 'get', class: 'btn btn-primary btn-xs', form_class: 'form-inline' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</section>
