<section class="content-header">
  <h1><%= t('tenant') %><small></small></h1>
  <ol class="breadcrumb">
    <li><a href="<%= admin_dashboard_path %>"><i class="fa fa-dashboard"></i> <%= t(:admin_dashboard) %></a></li>
    <li class="active"><%= link_to t(:tenant), admin_tenants_path %></li>
  </ol>
</section>

<section class="content">
  <%= render :partial => 'shared/flash', :locals => { :flash => flash } %>

  <div class="box box-warning">
    <div class="box-header">
      <h3 class="box-title">&nbsp;</h3>
      <div class="box-tools">
        <div class="input-group input-group-sm text-right">
          <div class="input-group-btn">
            <%= link_to t(:new_tenant), new_admin_tenant_path, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
    <div class="box-body">
      <!-- Table -->
      <table class="table table-striped table-bordered small">
        <thead>
          <tr>
            <th class="col-md-1"><%= t(:id) %></th>
            <th class="col-md-2"><%= t('activerecord.attributes.tenant.name') %></th>
            <th class="col-md-2"><%= t('activerecord.attributes.tenant.created_at') %></th>
            <th class="col-md-2"><%= t('activerecord.attributes.tenant.updated_at') %></th>
            <th class="col-md-1"><%= t(:operation) %></th>
          </tr>
        </thead>
        <tbody>
          <% @tenants.each do |tenant| %>
            <tr>
              <td><%= link_to tenant.id, edit_admin_tenant_path(tenant.id) %> &nbsp;</td>
              <td><%= tenant.name %></td>
              <td><%= tenant.created_at %></td>
              <td><%= tenant.updated_at %></td>
              <td>
                <%= button_to t(:delete), admin_tenant_path(tenant.id), method: :delete, class: 'btn btn-primary btn-xs', form_class: 'form-inline', data: {:confirm => t(:confirm_to_delete_tenant)} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</section>
