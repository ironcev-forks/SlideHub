<section class="content-header">
<h1><%= t(:edit_user) %><small></small></h1>
<ol class="breadcrumb">
  <li><a href="<%= admin_dashboard_path %>"><i class="fa fa-dashboard"></i> <%= t(:admin_dashboard) %></a></li>
  <li class="active"><%= link_to t('activerecord.models.user'), admin_users_path %></li>
</ol>
</section>

<section class="content">
<%= render :partial => 'shared/flash', :locals => { :flash => flash } %>

<%= simple_form_for @user, :html => { :class => "form-horizontal user" }, :url => admin_user_path(@user.id) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t('error_save_user', errors: @user.errors.count) %></h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field "_id", :value => @user[:id], :disabled => "disabled", :class => 'form-control' %>
    </div>
    <%= f.full_error(:user_id) %>
  </div>

  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'form-control' %>
    </div>
    <%= f.full_error(:username) %>
  </div>

  <div class="control-group">
    <%= f.label :display_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :display_name, :class => 'form-control' %>
    </div>
    <%= f.full_error(:display_name) %>
  </div>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= f.full_error(:email) %>
  </div>

  <div class="control-group">
    <%= f.label :biography, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :biography, :class => 'form-control' %>
    </div>
    <%= f.full_error(:biography) %>
  </div>

  <div class="control-group">
    <%= f.label :admin, :class => 'control-label' %>
    <div class="controls checkbox">
      <label>
        <%= f.check_box :admin %><%= t('activerecord.attributes.user.admin') %>
      </label>
    </div>
    <%= f.full_error(:admin) %>
  </div>

  <br clear="all" />

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t("helpers.links.cancel"), admin_users_path, :class => 'btn btn-default' %>
  <%= link_to t(:delete_user), admin_user_path(@user[:id]), :method => 'delete', :class => 'btn btn-danger pull-right', data: {:confirm => t(:confirm_to_delete_user)} %>

<% end %>

</section>
